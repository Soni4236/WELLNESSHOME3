<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_icon_container">

        <ImageView
            android:id="@+id/ivOnboarding"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_waveform" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Track your wellbeing\neasily"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Monitor your mood, stress, and sleep\npatterns all in one place"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>
