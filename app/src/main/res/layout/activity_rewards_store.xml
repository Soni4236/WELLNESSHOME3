<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F8"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#333333"/>
            
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Coin Balance Pill -->
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_icon_container_yellow"
                android:backgroundTint="#FCE8B2"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_coins"
                    app:tint="#8B4513" />

                <TextView
                    android:id="@+id/tvCoinBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="125 Coins"
                    android:textColor="#8B4513"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards Store"
            android:textColor="#212121"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem your coins for rewards"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"/>

        <!-- Filters ScrollView (Horizontal) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                 <!-- Badges -->
                <LinearLayout
                    android:id="@+id/tabBadges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bar"
                    android:backgroundTint="#F5F5F5"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">
                     <ImageView
                        android:id="@+id/ivTabBadges"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star" 
                        app:tint="#555555"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tvTabBadges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badges"
                        android:textColor="#555555"
                        android:textStyle="bold"/>
                </LinearLayout>

                 <!-- Sounds -->
                <LinearLayout
                    android:id="@+id/tabSounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bar"
                    android:backgroundTint="#CE93D8"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">
                     <ImageView
                        android:id="@+id/ivTabSounds"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_waveform" 
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tvTabSounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sounds"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </LinearLayout>

                 <!-- Walls -->
                <LinearLayout
                    android:id="@+id/tabWalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bar"
                    android:backgroundTint="#F5F5F5"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:gravity="center">
                     <ImageView
                        android:id="@+id/ivTabWalls"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_poll" 
                        app:tint="#555555"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tvTabWalls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Walls"
                        android:textColor="#555555"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Container for all lists -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Badges List (Default Visible) -->
            <LinearLayout
                android:id="@+id/layoutBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 7-Day Warrior -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card7DayWarrior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_pink"
                            android:backgroundTint="#FFEBEE">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_fire" 
                                app:tint="#FF5722"/>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="7-Day Warrior"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 coins"
                            android:textColor="#CE93D8"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mood Master -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMoodMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_yellow"
                            android:backgroundTint="#FFF8E1">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_emoji_smile" 
                                app:tint="#FFB300"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mood Master"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log your mood for 10 days"
                                android:textColor="#757575"
                                android:textSize="12sp"/>
                        </LinearLayout>
                         <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_pill_purple"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:gravity="center">
                             <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_coins"
                                app:tint="#FFFFFF"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sleep Champion -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSleepChampion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_blue"
                            android:backgroundTint="#E1F5FE">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_moon" 
                                app:tint="#5C6BC0"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sleep Champion"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achieve 8 hours sleep goal"
                                android:textColor="#757575"
                                android:textSize="12sp"/>
                        </LinearLayout>
                         <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_pill_purple"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:gravity="center">
                             <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_coins"
                                app:tint="#FFFFFF"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutSounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardForestRain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_green"
                            android:backgroundTint="#E8F5E9">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_waveform" 
                                app:tint="#4CAF50"/>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Forest Rain"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 coins"
                            android:textColor="#CE93D8"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOceanWaves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_blue"
                            android:backgroundTint="#E1F5FE">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_waveform" 
                                app:tint="#03A9F4"/>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Ocean Waves"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 coins"
                            android:textColor="#CE93D8"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Walls List -->
            <LinearLayout
                android:id="@+id/layoutWalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSunsetPeak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container_purple_filled"
                            android:backgroundTint="#EDE7F6">
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cloud" 
                                app:tint="#673AB7"/>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Sunset Peak"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40 coins"
                            android:textColor="#CE93D8"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
